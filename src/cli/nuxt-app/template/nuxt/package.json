{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "author": "<%= author %>",
  "private": true,
  "scripts": {
    "serve": "nuxt --open",
    "build": "nuxt build",
    <%_ if (isModeUniversal) { _%>
    "start": "nuxt start",
    "pm2:start": "env-cmd -f ./.env npm run pm2:start:env",
    "pm2:start:env": "pm2 start npm --name ${APP_NAME} -- start",
    "pm2:restart": "env-cmd -f ./.env npm run pm2:restart:env",
    "pm2:restart:env": "pm2 restart ${APP_NAME}",
    "pm2:list": "pm2 list",
    "pm2:stop": "env-cmd -f ./.env npm run pm2:stop:env",
    "pm2:stop:env": "pm2 stop ${APP_NAME} && pm2 delete ${APP_NAME}",
    "pm2:show": "env-cmd -f ./.env npm run pm2:show:env",
    "pm2:show:env": "pm2 show ${APP_NAME}",
    "pm2:monit": "pm2 monit",
    <%_ } else { _%>
    "generate": "nuxt generate",
    <%_ } _%>
    <%_ if (test) { _%>
    "test": "jest",
    <%_ } _%>
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 11.14.0"
  },
  "keywords": [
    "nuxtjs",
    "vuejs",
    "javascript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "**/*.vue": [
      "eslint --fix",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "**/*.md": [
      "prettier --parser markdown --prose-wrap always --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@nuxtjs/style-resources": "^1.0.0",
    "@platr/eslint-config-vue": "^0.1.3",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "@bazzite/nuxt-optimized-images": "^0.3.0",
    <%_ if (isDotenv) { _%>
    "@nuxtjs/dotenv": "^1.4.1",
    <%_ } _%>
    <%_ if (test) { _%>
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel-jest": "^25.1.0",
    "jest": "^25.1.0",
    "vue-jest": "^4.0.0-beta.2",
    "eslint-plugin-jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    <%_ } _%>
    <%_ if (isI18N) { _%>
    "papaparse": "^5.1.1",
    <%_ } _%>
    "": ""
  },
  "dependencies": {
    "nuxt": "^2.11.0",
    "nuxt-client-init-module": "^0.1.7",
    <%_ if (isModeUniversal) { _%>
    "env-cmd": "^10.0.1",
    "pm2": "^4.2.3",
    <%_ } _%>
    <%_ if (isAxios) { _%>
    "@nuxtjs/axios": "5.6.0",
    <%_ } _%>
    <%_ if (isGTM) { _%>
    "@nuxtjs/google-tag-manager": "^2.3.1",
    <%_ } _%>
    <%_ if (isBootstrap) { _%>
    "bootstrap": "^4.3.1",
    <%_ } _%>
    <%_ if (isElementUI) { _%>
    "element-ui": "^2.13.0",
    <%_ } _%>
    <%_ if (isMediaQuery) { _%>
    "nuxt-mq": "^2.0.1",
    <%_ } _%>
    <%_ if (isScrollTo) { _%>
    "vue-scrollto": "^2.17.1",
    <%_ } _%>
    <%_ if (isFilterPlural) { _%>
    "plural-ru": "^2.0.2",
    <%_ } _%>
    <%_ if (isFilterPrice) { _%>
    "wnumb": "1.2.0",
    <%_ } _%>
    <%_ if (isComponentVideoJS) { _%>
    "video.js": "^7.6.6",
    <%_ } _%>
    <%_ if (isComponentSwiper) { _%>
    "vue-awesome-swiper": "^3.1.3",
    <%_ } _%>
    <%_ if (isClickOutside) { _%>
    "vue-click-outside": "^1.0.7",
    <%_ } _%>
    <%_ if (isFingerprint) { _%>
    "fingerprintjs2": "^2.1.0",
    <%_ } _%>
    <%_ if (isComponentInputmask) { _%>
    "inputmask": "^5.0.3",
    <%_ } _%>
    <%_ if (isI18N) { _%>
    "nuxt-i18n": "^6.5.0",
    <%_ } _%>
    "": ""
  }
}
